<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmenti.MojBrojFragment"
    android:background="@color/pozadina">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/human_face"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bojan"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/poeniLeviIgrac"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/zuta"/>
        </LinearLayout>
    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="60"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_border"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/human_face"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stevan"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/poeniDesniIgrac"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/zuta"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="140dp"
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txtTrazeniBroj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traženi broj:"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/trazeniBroj"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="123"
            android:textSize="22sp"
            android:textAlignment="center"
            android:background="@drawable/customborder"
            android:backgroundTint="@color/crvena"
            android:textColor="@color/white"
            android:layout_below="@id/txtTrazeniBroj"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>

        <View
            android:id="@+id/linija1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/trazeniBroj"/>

        <LinearLayout
            android:id="@+id/racunskeOperacije"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/brojevi"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/plus"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:text="+"
                android:textSize="25sp"
                android:textAlignment="center"
                android:background="@drawable/customborder"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/minus"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:text="-"
                android:textSize="25sp"
                android:textAlignment="center"
                android:background="@drawable/customborder"
                android:textColor="@color/white"
                android:layout_below="@id/txtPonudjeniBrojevi"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/puta"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:text="*"
                android:textSize="25sp"
                android:textAlignment="center"
                android:background="@drawable/customborder"
                android:textColor="@color/white"
                android:layout_below="@id/txtPonudjeniBrojevi"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/podeljeno"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:text="/"
                android:textSize="25sp"
                android:textAlignment="center"
                android:background="@drawable/customborder"
                android:textColor="@color/white"
                android:layout_below="@id/txtPonudjeniBrojevi"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/otvorenaZagrada"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:text="("
                android:textSize="25sp"
                android:textAlignment="center"
                android:background="@drawable/customborder"
                android:textColor="@color/white"
                android:layout_below="@id/txtPonudjeniBrojevi"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/zatvorenaZagrada"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:text=")"
                android:textSize="25sp"
                android:textAlignment="center"
                android:background="@drawable/customborder"
                android:textColor="@color/white"
                android:layout_below="@id/txtPonudjeniBrojevi"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtPonudjeniBrojevi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ponuđeni brojevi:"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_below="@id/linija1"
            android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/brojevi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/txtPonudjeniBrojevi"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/ponudjeniBroj1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/customborder"
                android:backgroundTint="@color/plava"
                android:textColor="@color/white"
                android:layout_below="@id/txtPonudjeniBrojevi"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/ponudjeniBroj2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/customborder"
                android:backgroundTint="@color/plava"
                android:textColor="@color/white"
                android:layout_below="@id/txtPonudjeniBrojevi"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/ponudjeniBroj3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/customborder"
                android:backgroundTint="@color/plava"
                android:textColor="@color/white"
                android:layout_below="@id/txtPonudjeniBrojevi"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/ponudjeniBroj4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/customborder"
                android:backgroundTint="@color/plava"
                android:textColor="@color/white"
                android:layout_below="@id/txtPonudjeniBrojevi"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:id="@+id/ponudjeniBroj5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/customborder"
                android:backgroundTint="@color/plava"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:id="@+id/ponudjeniBroj6"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/customborder"
                android:backgroundTint="@color/plava"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rezultat_wrap"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_below="@id/racunskeOperacije"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="30dp">

            <TextView
                android:id="@+id/rezultat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/customborder"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rezultat_wrap"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:backgroundTint="@color/crvena"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potvrdi"
                android:backgroundTint="@color/zelena"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageButton
        android:id="@+id/mojBrojDalje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:src="@drawable/right_arrow" />
</FrameLayout>